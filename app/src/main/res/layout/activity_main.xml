<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientlist"
    tools:context=".MainActivity">


    <TextView

        android:id="@+id/weatherbit_city2"
        android:layout_width="191dp"
        android:layout_height="65dp"
        android:fontFamily="@font/aldrich"
        android:text="cityName"
        android:textAlignment="center"
        android:textAppearance="@style/AlertDialog.AppCompat.Light"
        android:textColor="@color/secondaryTextColor"
        android:textFontWeight="400"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.246" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/app_bar"
        android:layout_width="411dp"
        android:layout_height="50dp"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleMargin="0dp">



    </androidx.appcompat.widget.Toolbar>


<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/recycler_view"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent" />-->
    

    <TextView
        android:id="@+id/updated_at"
        android:layout_width="280dp"
        android:layout_height="43dp"
        android:layout_gravity="top|center"
        android:layout_marginBottom="44dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/_4_november_2019"
        android:textAlignment="center"
        android:textColor="@color/primaryTextColor"
        android:textFontWeight="600"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.587"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/weatherbit_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/aldrich"
        android:text="@string/temp"
        android:textAlignment="center"
        android:textColor="@color/secondaryTextColor"
        android:textFontWeight="400"
        app:layout_constraintBottom_toTopOf="@+id/weatherbit_city"
        app:layout_constraintStart_toStartOf="@+id/weatherbit_city" />

    <TextView

        android:id="@+id/weatherbit_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="119dp"
        android:fontFamily="@font/aldrich"
        android:text="cityName"
        android:textAlignment="center"
        android:textColor="@color/secondaryTextColor"
        android:textFontWeight="400"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView

        android:id="@+id/weatherbit_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:fontFamily="@font/aldrich"
        android:text="@string/temp"
        android:textAlignment="center"
        android:textColor="@color/secondaryTextColor"
        android:textFontWeight="400"
        app:layout_constraintBottom_toTopOf="@+id/weatherbit_windspeed"
        app:layout_constraintStart_toStartOf="@+id/weatherbit_windspeed" />

    <TextView

        android:id="@+id/weatherbit_windspeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/aldrich"
        android:text="@string/temp"
        android:textAlignment="center"
        android:textColor="@color/secondaryTextColor"
        android:textFontWeight="400"
        app:layout_constraintStart_toStartOf="@+id/weatherbit_city"
        app:layout_constraintTop_toBottomOf="@+id/weatherbit_city" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/weatherbitImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/openWeatherImage"
        app:layout_constraintTop_toBottomOf="@+id/openWeatherDescription" />

    <TextView
        android:id="@+id/openWeatherDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/aldrich"
        android:text="@string/description"
        android:textAlignment="center"
        android:textColor="@color/secondaryTextColor"
        android:textFontWeight="400"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openWeatherWindSpeed" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/openWeatherImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="165dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/weatherbitImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openWeatherDescription" />

    <TextView
        android:id="@+id/openWeatherWindSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/aldrich"
        android:text="@string/wind_speed"
        android:textAlignment="center"
        android:textColor="@color/secondaryTextColor"
        android:textFontWeight="400"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openWeatherHumidity" />

    <TextView
        android:id="@+id/openWeatherMaxTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/max_temp"
        android:textAlignment="center"
        android:textColor="@color/secondaryTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openWeatherTemp" />

    <TextView
        android:id="@+id/openWeatherMinTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/aldrich"
        android:text="@string/min_temp"
        android:textAlignment="center"
        android:textColor="@color/secondaryTextColor"
        android:textFontWeight="400"
        app:layout_constraintEnd_toEndOf="@+id/openWeatherTemp"
        app:layout_constraintStart_toEndOf="@+id/openWeatherTemp"
        app:layout_constraintTop_toBottomOf="@+id/openWeatherMaxTemp" />

    <TextView
        android:id="@+id/openWeatherTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/aldrich"
        android:text="@string/temp"
        android:textAlignment="center"
        android:textColor="@color/secondaryTextColor"
        android:textFontWeight="400"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/openWeatherHumidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/aldrich"
        android:text="@string/humidity"
        android:textAlignment="center"
        android:textColor="@color/secondaryTextColor"
        android:textFontWeight="400"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openWeatherMinTemp" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="122dp"
        android:layout_height="63dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:text="@string/_29_c"
        android:textAlignment="center"
        android:textColor="@color/primaryTextColor"
        android:textFontWeight="600"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.858"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:layout_constraintVertical_bias="0.109" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="42dp"
        android:fontFamily="@font/chewy"
        android:text="OpenWeatherMap"
        android:textColor="@color/secondaryTextColor"
        android:textFontWeight="600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/chewy"
        android:text="Weather Bit"
        android:textColor="@color/secondaryTextColor"
        android:textFontWeight="600"
        app:layout_constraintEnd_toEndOf="@+id/weatherbit_temp"
        app:layout_constraintStart_toEndOf="@+id/weatherbit_temp"
        app:layout_constraintTop_toTopOf="@+id/guideline4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="52dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="155dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="300dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="320dp" />


</androidx.constraintlayout.widget.ConstraintLayout>