<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientlist"
    android:id="@+id/layout"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleMargin="0dp">

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:iconifiedByDefault="false"
            android:queryHint="Search Location"/>
            <!--android:textColor="@color/lightSecondary"
            android:color ="@color/lightPrimary"-->

    </androidx.appcompat.widget.Toolbar>









    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:text="@string/serres_greece"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="135dp" />

    <TextView
        android:id="@+id/openWeatherTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/temp"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="475dp" />

    <TextView

        android:id="@+id/weatherbit_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cityName"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="466dp" />

    <TextView
        android:id="@+id/updated_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:text="@string/_4_november_2019"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="167dp" />

    <Button
        android:id="@+id/buttonHistoryActivity"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="History"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="186dp" />

    <TextView
        android:id="@+id/openWeatherMaxTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/max_temp"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="499dp" />

    <TextView
        android:id="@+id/openWeatherWindSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wind_speed"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="571dp" />

    <TextView
        android:id="@+id/weatherbit_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/temp"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="442dp" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/openWeatherImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="614dp" />

    <TextView

        android:id="@+id/weatherbit_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/temp"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="490dp" />

    <TextView

        android:id="@+id/weatherbit_windspeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/temp"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="514dp" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/weatherbitImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="533dp" />

    <TextView
        android:id="@+id/openWeatherMinTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/min_temp"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="523dp" />

    <TextView
        android:id="@+id/openWeatherDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="595dp" />

    <TextView
        android:id="@+id/openWeatherHumidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/humidity"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="547dp" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-thin"
        android:text="@string/_29_c"
        android:textSize="60sp"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="311dp" />




</androidx.constraintlayout.widget.ConstraintLayout>